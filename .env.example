APP_NAME="My Boat"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.railway.app

APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file
